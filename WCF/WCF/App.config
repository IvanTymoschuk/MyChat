<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" />
  </system.web>
  <!-- When deploying the service library project, the content of the config file must be added to the host's 
  app.config file. System.Configuration does not support config files for libraries. -->
  <system.serviceModel>
    <services>
      <service behaviorConfiguration="MexBeh" name="WCF.MailService">
        <endpoint address="Mail" binding="basicHttpBinding" bindingConfiguration=""
          name="Mail" contract="WCF.Interfaces.IMail" />
        <endpoint address="Mex" binding="mexHttpBinding" bindingConfiguration=""
          name="Mex" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8733/Design_Time_Addresses/MailService" />
          </baseAddresses>
        </host>
      </service>
      <service behaviorConfiguration="MexBeh" name="WCF.Service">
        <endpoint address="User" binding="wsDualHttpBinding" bindingConfiguration=""
          name="User" contract="WCF.Interfaces.IUser" />
        <endpoint address="Message" binding="wsDualHttpBinding" bindingConfiguration=""
          name="Message" contract="WCF.Interfaces.IMessage" />
        <endpoint address="Room" binding="wsDualHttpBinding" bindingConfiguration=""
          name="Room" contract="WCF.Interfaces.IRoom" />
        <endpoint address="Mex" binding="mexHttpBinding" bindingConfiguration=""
          name="Mex" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8733/Design_Time_Addresses/Service" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="MexBeh">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>

  <connectionStrings>
    <add name="DBase" connectionString="data source=(LocalDb)\MSSQLLocalDB;initial catalog=WCF.DBase;integrated security=True;MultipleActiveResultSets=True;App=EntityFramework" providerName="System.Data.SqlClient" />
    <add name="DataBaseModel" connectionString="data source=(LocalDb)\MSSQLLocalDB;initial catalog=DAL.DataBaseModel;integrated security=True;MultipleActiveResultSets=True;App=EntityFramework" providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>

